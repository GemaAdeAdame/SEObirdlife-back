{% extends 'base.html.twig' %}

{% block title %}Plant index{% endblock %}

{% block body %}

  <div class="title-image-container3">
        <img src="{{ asset('images/planta.png') }}" alt="Birds Image">
        <h1>Plant index</h1>
    </div>

    <table class="table3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plant in plants %}
            <tr>
                <td>{{ plant.id }}</td>
                <td>{{ plant.name }}</td>
                <td>{{ plant.description }}</td>
                <td>{{ plant.image }}</td>
                <td>
                    <a class= "show" href="{{ path('app_plant_show', {'id': plant.id}) }}">show</a>
                    <a href="{{ path('app_plant_edit', {'id': plant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class= "new" href="{{ path('app_plant_new') }}">Create new</a>
{% endblock %}
